{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "types": ["jest", "node"],
    "baseUrl": "."
  },
  "include": [
    "app",
    "lib",
    "hooks",
    "data",
    "store",
    "server",
    "tests",
    "index.ts",
    "app.config.*",
    "metro.config.*",
    "jest.config.js"
  ],
  "exclude": ["node_modules"],
  "extends": "expo/tsconfig.base"
}
